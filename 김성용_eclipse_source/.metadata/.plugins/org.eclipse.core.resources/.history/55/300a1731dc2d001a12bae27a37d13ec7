	<script>
		function save(){
		var = document
			if(notice.writer.value==""){
				alter("글쓴이 입력");
				notice.writer.focus();
				return false;
			}
			if(notice.title.value==""){
				alter("제목을 입력");
				notice.title.focus();
				return false;
			}
			if(notice.contents.value=="")}
				alter("내용을 입력");
				notice.contents.focus();
				return false;
			}
			return true;
		}
	</script>
	<script>
		$(function(){
			$(".location .dropdown>a").on("click",function(e){
				e.preventDefault();
				if($(this).next().is(":visible")){
					$(".location .dropdown > a").next().hide();
				}else{
					$(".location .dropdown > a").next().hide();
					$(this).next().show();
				}
			});
		});
	</script>

